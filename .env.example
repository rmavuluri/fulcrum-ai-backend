# Auth0 (use your custom API Identifier for AUTH0_AUDIENCE, not the Management API)
AUTH0_DOMAIN=your-tenant.us.auth0.com
AUTH0_ISSUER_BASE_URL=https://your-tenant.us.auth0.com
AUTH0_AUDIENCE=https://fulcrum-ai-api

# Server
PORT=3001
FRONTEND_URL=http://localhost:5173

# Claude (for /api/chat)
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_MODEL=claude-sonnet-4-5

# Web search tool (used when MCP tools don't cover the query)
# WEB_SEARCH_MAX_USES=5
# WEB_SEARCH_ALLOWED_DOMAINS=google.com

# MCP document server (optional; used by /api/chat when not using Ally sandbox)
MCP_SERVER_COMMAND=uv
MCP_SERVER_ARGS=run,src/mcp_server.py

# Ally sandbox (optional; use for /api/chat instead of Claude + MCP)
# USE_ALLY_SANDBOX=1
# SANDBOX_CLIENT_KEY=your-client-key
# SANDBOX_CLIENT_SECRET=your-client-secret
# ALLY_SANDBOX_MODEL_ID=openai.gpt-35-turbo-16k
# ALLY_TOKEN_ENDPOINT=https://dev.api.ally.com/v1/access/token
# ALLY_SANDBOX_PROMPT_URL=https://dev.api.ally.com/amh-gpt-sandbox/shared/curated/prompt
